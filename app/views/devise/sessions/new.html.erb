<div class="loginForm__container">
  <div class="loginForm__headerText">
    ログイン
  </div>

  <%= form_with model: @user, url: user_session_path, local: true, class: "loginForm__form" do |f| %>
    <!-- メールアドレス -->
    <div class="loginForm__field">
      <%= f.label :email, class: "loginForm__label" do %>
        メールアドレス
        <span class="indispensable">必須</span>
      <% end %>
      <%= f.email_field :email, class: "loginForm__input", id: "email" %>
      <% if @user.errors[:email].present? %>
        <span class="loginForm__errorText"><%= @user.errors[:email].first %></span>
      <% end %>
    </div>

    <!-- パスワード -->
    <div class="loginForm__field">
      <%= f.label :password, class: "loginForm__label" do %>
        パスワード
        <span class="indispensable">必須</span>
      <% end %>
      <%= f.password_field :password, class: "loginForm__input", id: "password" %>
      <% if @user.errors[:password].present? %>
        <span class="loginForm__errorText"><%= @user.errors[:password].first %></span>
      <% end %>
    </div>

    <!-- ログインボタン -->
    <div class="loginForm__actions">
      <%= f.submit "ログイン", class: "loginForm__submitButton" %>
    </div>
  <% end %>

  <!-- アカウント作成リンク -->
  <div class="loginForm__actions">
    <%= link_to "アカウントをお持ちでない方はこちら", new_user_registration_path, class: "loginForm__backButton" %>
  </div>
</div>
