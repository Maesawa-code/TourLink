<%= render 'shared/header' %>

<div class="usersEdit__container">
  <div class="usersEdit__header">プロフィール編集</div>
  <%= form_with model: @user, url: user_path(@user), method: :patch, multipart: true, local: true, class: "usersEdit__form" do |f| %>
    <div class="usersEdit__field">
      <%= f.label :nickname, "名前", class: "usersEdit__label" %>
      <%= f.text_field :nickname, class: "usersEdit__input" %>
      <% if @user.errors[:nickname].present? %>
        <span class="usersEdit__errorText"><%= @user.errors[:nickname].first %></span>
      <% end %>
    </div>
    <div class="usersEdit__field">
      <%= f.label :gender_id, "性別", class: "usersEdit__label" %>
      <%= f.collection_select :gender_id, Gender.all, :id, :name, { prompt: "選択してください" }, class: "usersEdit__select" %>
    </div>
    <div class="usersEdit__field">
      <%= f.label :age_group_id, "年齢", class: "usersEdit__label" %>
      <%= f.collection_select :age_group_id, AgeGroup.all, :id, :name, { prompt: "選択してください" }, class: "usersEdit__select" %>
    </div>
    <div class="usersEdit__field">
      <%= f.label :profile_image, "プロフィール画像", class: "usersEdit__label" %>
      <%= f.file_field :profile_image, class: "usersEdit__input" %>
    </div>
    <div class="usersEdit__actions">
      <%= f.submit "更新する", class: "usersEdit__button" %>
      <%= link_to "戻る", users_path, class: "usersEdit__backButton" %>
    </div>
  <% end %>
</div>

<%= render 'shared/footer' %>
